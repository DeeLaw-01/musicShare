<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <!-- Servlet mappings -->
  <servlet>
    <servlet-name>AuthenticationServlet</servlet-name>
    <servlet-class>com.example.servlets.AuthenticationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AuthenticationServlet</servlet-name>
    <url-pattern>/Login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>handleLogin</servlet-name>
    <servlet-class>com.example.servlets.handleLogin</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>handleLogin</servlet-name>
    <url-pattern>/HandleLogin</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>HostServlet</servlet-name>
    <servlet-class>com.example.servlets.HostServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HostServlet</servlet-name>
    <url-pattern>/Host</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>JoinServlet</servlet-name>
    <servlet-class>com.example.servlets.JoinServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>JoinServlet</servlet-name>
    <url-pattern>/Join</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>HandlePlayer</servlet-name>
    <servlet-class>com.example.servlets.HandlePlayer</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HandlePlayer</servlet-name>
    <url-pattern>/Handleplayer</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>StreamServlet</servlet-name>
    <servlet-class>com.example.servlets.StreamServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>StreamServlet</servlet-name>
    <url-pattern>/Stream</url-pattern>
  </servlet-mapping>

  <!-- Welcome file -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

</web-app>
